<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#dd2">

    <EditText
        android:id="@+id/quertname"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/soso_ht"
        android:background="@drawable/layoutrselecter"
        android:hint="输入"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/quertsoso"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/soso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="-10dp"
        android:text="|"
        android:textColor="#fff"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/soso_ht"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@mipmap/ht" />

    <TextView
        android:id="@+id/soso_soso_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="搜索"
        android:textColor="#000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        />

</RelativeLayout>