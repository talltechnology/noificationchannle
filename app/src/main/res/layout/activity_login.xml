<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wxy.noificationchannle.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgrond_shallow_change" />

        <ImageView
            android:id="@+id/img_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_stop" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:paddingLeft="55dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ueer_phone_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/user_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <EditText
            android:id="@+id/input_auth_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:inputType="textPassword"
            android:paddingLeft="55dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登录密码"
            android:inputType="textPassword"
            android:paddingLeft="55dp"
            android:textSize="15sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/user_code_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/yzm" />

        <Button
            android:id="@+id/btn_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@mipmap/back"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="10dp" />

        <CheckBox
            android:id="@+id/box_check"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:button="@drawable/selecte2"
            android:visibility="gone" />
    </RelativeLayout>


    <Button
        android:id="@+id/login_sum"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/user_code_img"
        android:layout_weight="1.5"
        android:background="@mipmap/back"
        android:text="登录"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/login_toggles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/login_sum"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="使用常规登录方式"
        android:textColor="#ffd200" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="其他登录方式"
        android:textColor="#ccc" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/qq" />

        <ImageView
            android:id="@+id/wx"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/wx" />


    </RelativeLayout>

</LinearLayout>



